{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "sourceMap": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
